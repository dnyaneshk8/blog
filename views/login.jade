extends layout

block content
 include ./partials/header 	
 .col-md-8.col-md-offset-2
  !=messages()
  if errors
    each error, i in errors
      div.alert.alert-danger #{error.msg}		
  form.form-signin(action='/users/login', method='post', name='Login_Form')
    h3.form-signin-heading Welcome Back! Please Sign In
    hr.colorgraph
    br
    .form-group  
            input.form-control(type='text', name='username', placeholder='Username', required='', autofocus='')
    .form-group  
            input.form-control(type='password', name='password', placeholder='Password', required='')
    button.btn.btn-lg.btn-primary.btn-block(name='Submit', value='Login', type='Submit') Login

